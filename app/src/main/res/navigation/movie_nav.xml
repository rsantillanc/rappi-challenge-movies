<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_nav"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="pe.santillan.rappi.movies.ui.MoviesFragment"
        android:label="fragment_movies"
        tools:layout="@layout/fragment_movies">
        <action
            android:id="@+id/action_movies_to_movie_detail"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="pe.santillan.rappi.movies.ui.MovieDetailFragment"
        android:label="MovieDetailUI"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="movie"
            app:argType="pe.santillan.rappi.data.domain.Movie" />
    </fragment>
</navigation>